{
  "extends": "all",
  "rules": {
    "line-length": {
      "line_length": 120,
      "heading_line_length": 120,
      "header_line_length": 120,
      "code_block_line_length": 120
    },
    "no-trailing-punctuation": false,
    "no-inline-html": {
      "allowed_elements": ["br"]
    },
    "heading-increment": true,
    "no-duplicate-heading": {
      "siblings_only": true
    },
    "emphasis-markers": {
      "style": "consistent"
    },
    "ol-prefix": {
      "style": "ordered"
    },
    "list-marker-space": true,
    "code-block-style": {
      "style": "fenced"
    },
    "fenced-code-language": true,
    "no-hard-tabs": true,
    "whitespace": {
      "br_spaces": 2
    },
    "link-fragments": true,
    "ul-start-left": true,
    "ul-indent": {
      "indent": 2
    },
    "list-item-content-indent": true,
    "single-h1": false
  }
}
