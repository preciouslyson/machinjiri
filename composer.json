{
  "name": "preciouslyson/machinjiri",
  "description": "Machinjiri is a lightweight, flexible PHP framework for rapid web development.",
  "type": "library",
  "license": "MIT",
  "version": "1.2",
  "authors": [
    {
      "name": "Precious Lyson",
      "email": "precious.lyson@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.4.2",
    "phpmailer/phpmailer": "*",
    "symfony/console": ">=5.3",
    "symfony/filesystem": ">=5.3",
    "symfony/process": ">=5.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "Mlangeni\\Machinjiri\\Core\\": "src/Machinjiri/",
      "Mlangeni\\Machinjiri\\App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mlangeni\\Machinjiri\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}